@model IEnumerable<DBEntities.Prospect>

@{
    ViewBag.Title = "Index";
}

<h2>Index</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.phoneNumber)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.InitialContactDate)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.initialContactNotes)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.name)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.phoneNumber)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.InitialContactDate)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.initialContactNotes)
        </td>
		<td>
			@Html.ActionLink("Edit", "Edit", new { id = item.id }) |
			@Html.ActionLink("Details", "Details", new { id = item.id }) |
			@Html.ActionLink("Promote to Client", "Create", "Clients", new
			{
				@name = item.name,
				@phoneNumber = item.phoneNumber,
				@initialContactDate = item.InitialContactDate,
				@initialContactNotes = item.initialContactNotes
			}, null); |
			@Html.ActionLink("Delete", "Delete", new { id = item.id })
		</td>
    </tr>
}

</table>
